{
  "manifest_version": 3,
  "name": "Toggle JavaScript",
  "version": "1.0",
  "description": "Toggle JavaScript enable/disable for the current site.",
  "permissions": ["contentSettings", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Toggle JavaScript"
  },
  "commands": {
    "toggle-javascript": {
      "suggested_key": {
        "default": "Ctrl+J"
      },
      "description": "Toggle JavaScript on/off for the current site"
    }
  }
}
